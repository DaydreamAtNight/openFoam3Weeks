FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         backward;
}

gradSchemes
{
    default         Gauss linear;
    //default         cellMDLimited Gauss linear 1;

    grad(p)         Gauss linear;
}

divSchemes
{
    default         none;
    //div(phi,U)      Gauss linearUpwind default;
    div(phi,U)      Gauss linear;
}

laplacianSchemes
{
    // default         Gauss linear orthogonal;
    default         Gauss linear limited 0;
}

interpolationSchemes
{
    default         linear;
}

snGradSchemes
{
    // default         orthogonal;
    default         limited 0;
}

