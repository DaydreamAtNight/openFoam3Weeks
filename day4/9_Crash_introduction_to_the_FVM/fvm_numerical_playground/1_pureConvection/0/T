FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 0;

boundaryField
{
    top
    {
        type            zeroGradient;
    }
    
    bottom
    {
        type            zeroGradient;
    }
    
    frontAndBack
    {
        type            empty;
    }

    in
    {
        type            fixedValue;
        value           uniform 1;
    }
    
    out
    {
        type            zeroGradient;
    }
}

